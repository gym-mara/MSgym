.ani
  width: 400px
  height: 400px
  margin: 0 auto
  position: relative

.nubes
  margin: 0px auto
  position: absolute
  background-color: rgba(255,255,255,0.1)
  z-index: 20
  width: 375px
  height: 375px

.mundo
  margin: 0 auto
  position: absolute
  z-index: 10
  margin: 0px auto
  width: 365px
  height: 365px
  transform: rotate(20deg)
  opacity: 0.8
  background: url(maps1.png) repeat-x 0 0
  border-radius: 365px
  position: relative
  border: 0.5px solid #295fad
  animation: turn 25s infinite linear
  -webkit-animation: turn 25s infinite linear

@keyframes turn
  0%
    background-position: 0 0
  50%
    background-position: -365px 0
    box-shadow: 0px 15px 20px rgba(255,255,255,0.9) inset,25em 0px 80px rgba(255,255,255,0.3) inset
  100%
    background-position: -727px 0
@keyframes turn
  0%
    background-position: 0 0
  50%
    background-position: -365px 0
    box-shadow: 0px 15px 25px rgba(255,255,255,0.9) inset,25em 0px 80px rgba(255,255,255,0.3) inset
  100%
